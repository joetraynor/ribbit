<% if current_user %>
  <%= render 'ribbits/new_form' %>
<%end%>
<div class="panel left">
  <h1>Buddies Ribbits</h1>
    <%= form_tag ribbits_path, :method => 'get' do%>
    <p>
      <%= submit_tag "Search for hashtag:", :content => 'nil'%>
      <%= text_field_tag :search, params[:search]%>
    </p>
  <%end%>

  <% @ribbits.each do |ribbit| %>
    <div class = "ribbitWrapper">
      <a href="<%= user_path ribbit.user%>">
        <%= image_tag ribbit.user.image_url(:thumb).to_s %>
        <span class ="name"> <%= ribbit.user.name %> </span>
      </a>
      @<%= ribbit.user.username%>
      <span class ="time"><%= time_ago_in_words(ribbit.created_at)%></span>
      <p><%= ribbit.content%></p>
    </div>
  <%end%>
</div>

