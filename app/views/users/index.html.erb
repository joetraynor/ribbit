<% if current_user %>
  <%=render "ribbits/new_form"%>
<%end%>

<div class="panel left">
  <h1>Public Profiles</h1>

<%= form_tag users_path, :method => 'get' do%>
    <p>
      <%= submit_tag "Search for a friend:", :name => 'nil'%>
      <%= text_field_tag :search, params[:search]%>
    </p>
  <%end%>

  <%@users.each do |user| %>
    <div class="ribbitWrapper">
      <a href="<%=user_path user%>">
      <%= image_tag user.image_url(:thumb).to_s %>
        <span class="name"><%= user.name%></span>
      </a>
      @<%= user.username %>

          <p>
        <%= user.ribbits.length %> Ribbits
          <span class="spacing"> <%= user.followers.length%> Followers </span>
          <span class="spacing">  <%= user.followeds.length%> Following </span>
          </p>
        <% if user.bio %>
          <p> <%=user.bio%> </p>
        <% elsif user.ribbits.first %>
          <p><%=user.ribbits.first.content%></p>
        <%end%>
    </div>
   <%end%>
</div>
